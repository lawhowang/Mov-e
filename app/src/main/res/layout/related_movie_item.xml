<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imageView_RelatedMovieItemThumbnail"
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_not_available" />

    <TextView
        android:id="@+id/textView_RelatedMovieItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="moviename"
        android:textAlignment="center"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/imageView_RelatedMovieItemThumbnail"
        app:layout_constraintStart_toStartOf="@+id/imageView_RelatedMovieItemThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/imageView_RelatedMovieItemThumbnail" />
</android.support.constraint.ConstraintLayout>
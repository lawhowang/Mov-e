<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager"
    tools:context=".Watchlist"
    tools:listitem="@layout/watchlist_item" >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Watchlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/watchlist_item" />
    <TextView
    android:id="@+id/textView_WatchlistEmptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:text="No items in your watchlist yet.\n\nGo and add your favourite movie here!" />
</FrameLayout>